@model IEnumerable<Domain.Model.Entities.PostEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlPhoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <img src="@item.UrlPhoto" alt="Text" style="width:100px; height:150px;" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                    <i class="far fa-edit"> </i>
                    Edit
                </a>

                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                    <i class="fas fa-eye"> </i>
                    Details
                </a>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="far fa-trash-alt"> </i>
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
